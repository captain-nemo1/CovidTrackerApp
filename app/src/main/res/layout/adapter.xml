<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_marginBottom="5dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="4dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="6dp"
    app:cardPreventCornerOverlap="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            app:autoSizeTextType="uniform" />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:textColor="@color/red"
            app:autoSizeTextType="uniform"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/textView_inc"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/textView"
            android:textSize="12sp"
            android:textColor="@color/red"
            app:autoSizeTextType="uniform"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:layout_toStartOf="@id/recovered"
            app:autoSizeTextType="uniform"
            android:textColor="@color/blue"
            android:id="@+id/active"
            />

        <TextView
            android:id="@+id/dead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/recovered"
            android:gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="2dp"
            android:textSize="15sp"
            android:textColor="@color/grey"
            app:autoSizeTextType="uniform" />
        <TextView
            android:id="@+id/dead_increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dead"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/recovered"
            android:textAlignment="center"
            android:justificationMode="inter_word"
            android:layout_marginEnd="2dp"
            android:textSize="15sp"
            android:textColor="@color/grey"
            app:autoSizeTextType="uniform"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        app:autoSizeTextType="uniform"
        android:textColor="@color/green"
        android:id="@+id/recovered"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recovered"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            app:autoSizeTextType="uniform"
            android:textColor="@color/green"
            android:id="@+id/recovered_increase"
            android:justificationMode="inter_word"

            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>